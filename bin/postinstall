#!/bin/bash
script_dir=$(dirname $(readlink -f $0))
base_dir=$(dirname $script_dir)
module_dir=$(dirname $(dirname $base_dir))
src_dir=$(dirname $module_dir)
if [ -d $module_dir/.bin ]; then
  cd $module_dir/.bin
  ln -sf ../@drumee/server-dev-tools/bin/watcher ./drumee-server-devel
  ln -sf ../@drumee/server-dev-tools/bin/watcher ./drumee-server-deploy
  ln -sf ../@drumee/server-dev-tools/index.js ./drumee-server-plugin
  if [ ! -d $src_dir/.dev-tools.rc ]; then
    cp -r $base_dir/.dev-tools.rc $src_dir/
  fi
else
  # Global install
  if [ -d "$NODE_PATH" ]; then
    cd /usr/bin
    ln -sf $script_dir/watcher ./drumee-server-devel
    ln -sf $script_dir/watcher ./drumee-server-deploy
    ln -sf $src_dir/index.js ./drumee-server-plugin
  fi
fi